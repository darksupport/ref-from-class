<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net"

    type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>

  <log4net>
    <appender name="AppenderInfo"

    type="log4net.Appender.RollingFileAppender" >
      <file value="INFO.log" />
      <encoding value="utf-8" />
      <appendToFile value="false" />
      <rollingStyle value="Date" />
      <maximumFileSize value="5MB"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date | %username | %method - %message%n" />        
      </layout>
    </appender>

    <appender name="AppenderError"

    type="log4net.Appender.RollingFileAppender" >
      <file value="ERROR.log" />
      <encoding value="utf-8" />
      <appendToFile value="false" />
      <rollingStyle value="Date" />
      <maximumFileSize value="5MB"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date | %username | %method ERROR: %n  %exception   " />        
      </layout>
    </appender>
    
    <!--log level-->
    <root>
      <level value="INFO" />//
      <appender-ref ref="AppenderInfo" />
      <level value="ERROR" />//
      <appender-ref ref="AppenderError" />
    </root>
  </log4net>

  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

  
</configuration>